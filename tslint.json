{
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": [
      "**/node_modules"
    ]
  },
  "defaultSeverity": "warning",
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules",
    "node_modules/tslint-microsoft-contrib"
  ],
  "rules": {
    "align": [true, "parameters"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "await-promise": true,
    "ban": [
      true,
      { "name": "xdescribe", "message": "Do not skip tests" },
      { "name": "fdescribe", "message": "Do not focus tests" },
      { "name": "xit", "message": "Do not skip tests" },
      { "name": "fit", "message": "Do not focus tests" }
    ],
    "deprecation": { "severity": "warn" },
    "indent": [true, "spaces", 2],
    "interface-name": [true, "never-prefix"],
    "match-default-export-name": true,
    "max-classes-per-file": false,
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-arg": true,
    "no-banned-terms": true,
    "no-boolean-literal-compare": true,
    "no-console": [
      true,
      "debug",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-constant-condition": true,
    "no-control-regex": true,
    "no-delete-expression": true,
    "no-disable-auto-sanitization": true,
    "no-document-domain": true,
    "no-document-write": true,
    "no-duplicate-switch-case": true,
    "no-empty-character-class": true,
    "no-empty-line-after-opening-brace": true,
    "no-empty": false,
    "no-ex-assign": true,
    "no-exec-script": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-for-in-array": true,
    "no-for-in": true,
    "no-function-constructor-with-string-args": true,
    "no-function-expression": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-inner-declarations": true,
    "no-inner-html": true,
    "no-invalid-regexp": true,
    "no-irregular-whitespace": true,
    "no-magic-numbers": [true, -1, 0, 1, 2],
    "no-multi-spaces": true,
    "no-non-null-assertion": true,
    "no-octal-literal": true,
    "no-regex-spaces": true,
    "no-shadowed-variable": true,
    "no-single-line-block-comment": true,
    "no-sparse-arrays": true,
    "no-string-based-set-immediate": true,
    "no-string-based-set-interval": true,
    "no-string-based-set-timeout": true,
    "no-switch-case-fall-through": true,
    "no-this-assignment": true,
    "no-typeof-undefined": true,
    "no-unexpected-multiline": true,
    "no-unnecessary-bind": true,
    "no-unnecessary-field-initialization": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-local-variable": true,
    "no-unnecessary-override": true,
    "no-unnecessary-qualifier": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-with-statement": true,
    "object-literal-sort-keys": false,
    "promise-function-async": true,
    "promise-must-complete": true,
    "restrict-plus-operands": true,
    "return-undefined": true,
    "semicolon": [true, "never"],
    "ter-no-tabs": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true, "call-signature"],
    "underscore-consistent-invocation": [true, { "style": "instance" }],
    "unified-signatures": true,
    "variable-name": false
  }
}
